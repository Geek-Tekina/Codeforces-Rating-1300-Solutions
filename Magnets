#include<iostream>
using namespace std;

int main()
{
    int t;
    cin>>t;
    string s ;
    cin>>s;
    static string ss = s;
    t--;
    int cnt=0;
    while(t--)
    {
      string s ;
      cin>>s;
      if(s!=ss)
      {
          cnt++;
          ss=s;
      }
        
    }
    cout<<cnt+1;
    
    
}
